<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/yellow_bg"
    tools:context=".home">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sliding"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#DAD2AB"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:iss_auto_cycle="true"
            app:iss_delay="1000"
            app:iss_period="1000"
            app:iss_text_align="CENTER" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_above="@+id/lower_linear_layout"
        android:layout_below="@+id/cv_sliding"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="85dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_call"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#DAD2AB"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@drawable/call" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_web"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#DAD2AB"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@drawable/web" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_mail"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#DAD2AB"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@drawable/mail" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lower_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.3333"
            android:background="@drawable/gradient_background"
            android:elevation="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pro"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/person" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginStart="50dp"
            android:layout_weight="0.3333"
            android:background="@drawable/gradient_background"
            android:elevation="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cam"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/photo_camera" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.3333"
            android:background="@drawable/gradient_background"
            android:elevation="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logout"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logout" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>